# =============================================================================
# ACTION ITEM GRAPH PIPELINE - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...

# Model selection (optional - defaults shown)
# OPENAI_CHAT_MODEL=gpt-4.1-mini          # For extraction and synthesis
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # For action item embeddings
# OPENAI_EMBEDDING_DIMENSIONS=1536        # Embedding vector dimensions

# -----------------------------------------------------------------------------
# Neo4j Configuration (Aura or self-hosted)
# -----------------------------------------------------------------------------
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io  # Aura format
# NEO4J_URI=bolt://localhost:7687                 # Local format
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password
NEO4J_DATABASE=neo4j                              # Optional, defaults to "neo4j"

# -----------------------------------------------------------------------------
# Pipeline Configuration (optional)
# -----------------------------------------------------------------------------
# SIMILARITY_THRESHOLD=0.65               # Threshold for action item matching (0.0 - 1.0)
# LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
# LOG_FORMAT=json                         # json or console
